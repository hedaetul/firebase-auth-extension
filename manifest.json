{
  "manifest_version": 3,
  "name": "Firebase Auth Extension",
  "version": "1.0",
  "description": "A Chrome extension for Firebase Authentication",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./images/sharingan.png",
      "48": "./images/sharingan.png",
      "128": "./images/sharingan.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://www.gstatic.com; object-src 'self';"
  }
}
